{
  "private": true,
  "name": "@mavenagi/template",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "next build",
    "commitlint": "commitlint --edit",
    "dev": "next dev --turbopack",
    "lint": "next lint",
    "lint:format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint:format:package": "prettier-package-json --write ./package.json",
    "prepare": "husky",
    "start": "next start",
    "storybook": "storybook dev -p 8081",
    "storybook:build": "storybook build",
    "test": "pnpm test:vitest && pnpm test:recorded && pnpm test:playwright",
    "test:coverage": "pnpm test:coverage:vitest",
    "test:playwright": "playwright test",
    "test:playwright:ci": "start-server-and-test start http://localhost:3000 test:playwright",
    "test:record": "NEVE_RECORD=true pnpm run test:recorded",
    "test:recorded": "vitest --config vitest.recorded.config.js run",
    "test:vitest": "vitest run",
    "test:vitest:coverage": "vitest run --coverage.enabled --coverage.reporter='text-summary'"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "dependencies": {
    "mavenagi": "1.0.6",
    "next": "^15.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@mavenagi/neve-recorder": "^0.1.1",
    "@playwright/test": "^1.49.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-essentials": "^8.4.6",
    "@storybook/addon-interactions": "^8.4.6",
    "@storybook/addon-onboarding": "^8.4.6",
    "@storybook/blocks": "^8.4.6",
    "@storybook/nextjs": "^8.4.6",
    "@storybook/react": "^8.4.6",
    "@storybook/test": "^8.4.6",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.5",
    "commitizen": "^4.3.1",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.1.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-i18next": "^6.1.1",
    "eslint-plugin-storybook": "^0.11.1",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "msw": "^2.6.6",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-package-json": "^2.8.0",
    "semantic-release": "^24.2.0",
    "start-server-and-test": "^2.0.8",
    "storybook": "^8.4.6",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^3.4.16",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "5.1.3",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": "^22.12.0",
    "pnpm": "^9.1.0"
  },
  "lint-staged": {
    "src/**/*.ts": "prettier --config .prettierrc --write",
    "./package.json": "prettier-package-json --write"
  },
  "packageManager": "pnpm@9.2.0"
}
